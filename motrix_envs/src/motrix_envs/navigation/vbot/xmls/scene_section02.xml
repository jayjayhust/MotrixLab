<?xml version="1.0" ?>
<mujoco model="vbot navigation - section02">
  <compiler angle="radian" meshdir="meshes/" autolimits="true"/>
  
  <!-- 引入vbot机器人 -->
  <include file="vbot.xml" />
  
  <statistic center="0 15 0.1" extent="15" meansize="0.04" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="120" elevation="-20" />
    <map force="0.01" />
    <scale forcewidth="0.3" contactwidth="0.5" contactheight="0.2" />
    <quality shadowsize="8192" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    
    <!-- 加载section02地形模型 - 使用0126版本 -->
    <model name="section02C" file="0126_C_section02.xml"/>
  </asset>

  <worldbody>
    <light pos="0 15 10" dir="0 0 -1" directional="true" />
    
    <!-- 加载section02地形 -->
    <attach model="section02C" prefix="0"/>
  </worldbody>

  <sensor>
    <contact name="FR_foot_contact" subtree1="FR_foot" subtree2="0ground_root" data="normal" num="1" />
    <contact name="FL_foot_contact" subtree1="FL_foot" subtree2="0ground_root" data="normal" num="1" />
    <contact name="RR_foot_contact" subtree1="RR_foot" subtree2="0ground_root" data="normal" num="1" />
    <contact name="RL_foot_contact" subtree1="RL_foot" subtree2="0ground_root" data="normal" num="1" />
    <!-- 基座碰撞检测传感器：检测基座与地形的碰撞 -->
    <contact name="base_contact" subtree1="base" subtree2="0ground_root" data="normal" num="1" />
  </sensor>

</mujoco>