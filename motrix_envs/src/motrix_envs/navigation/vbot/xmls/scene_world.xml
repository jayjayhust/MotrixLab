<?xml version="1.0" ?>
<mujoco model="vbot navigation with world terrain">
  <compiler angle="radian" meshdir="meshes/" autolimits="true"/>
  
  <!-- 引入vbot机器人 -->
  <include file="vbot.xml" />
  
  <statistic center="0 15 0.1" extent="40" meansize="0.04" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="120" elevation="-20" />
    <map force="0.01" />
    <scale forcewidth="0.3" contactwidth="0.5" contactheight="0.2" />
    <quality shadowsize="8192" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    
    <!-- 加载三段地形模型 -->
    <model name="section01C" file="../world_0122/section01/0120_C_section01.xml"/>
    <model name="section02C" file="../world_0122/section02/0120_C_section02.xml"/>
    <model name="section03C" file="../world_0122/section03/0122_C_section03.xml"/>
  </asset>

  <worldbody>
    <light pos="0 15 10" dir="0 0 -1" directional="true" />
    
    <!-- 加载三段地形 -->
    <attach model="section01C" prefix="0"/>
    <attach model="section02C" prefix="1"/>
    <attach model="section03C" prefix="2"/>
    
    <!-- 地面用于足部接触检测 -->
    <geom name="ground" pos="0 15 -10" size="100 100 0.01" type="plane" rgba="0 0 0 0" contype="1" conaffinity="1"/>
  </worldbody>

  <sensor>
    <contact name="FR_foot_contact" geom2="FR" geom1="ground" data="normal" num="1" />
    <contact name="FL_foot_contact" geom2="FL" geom1="ground" data="normal" num="1" />
    <contact name="RR_foot_contact" geom2="RR" geom1="ground" data="normal" num="1" />
    <contact name="RL_foot_contact" geom2="RL" geom1="ground" data="normal" num="1" />
  </sensor>

</mujoco>
