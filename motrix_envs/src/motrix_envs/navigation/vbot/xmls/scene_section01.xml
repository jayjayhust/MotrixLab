<?xml version="1.0" ?>
<mujoco model="vbot navigation - section01">
  <compiler angle="radian" meshdir="meshes/" autolimits="true"/>
  
  <!-- 引入vbot机器人 -->
  <include file="vbot.xml" />
  
  <statistic center="0 0 0.1" extent="12" meansize="0.04" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="120" elevation="-20" />
    <map force="0.01" />
    <scale forcewidth="0.3" contactwidth="0.5" contactheight="0.2" />
    <quality shadowsize="8192" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    
    <!-- 加载需要的模型 -->
    <model name="section01V" file="0202_V_section01.xml"/>  <!-- 视觉模型 -->
    <model name="section01C" file="0126_C_section01.xml"/>  <!-- 碰撞模型 -->
    <model name="section02C" file="0131_C_section02_hotfix1.xml"/> 
    <model name="section02V" file="0202_V_section02.xml"/>  
    <model name="section03C" file="0126_C_section03.xml"/> 
    <model name="section03V" file="0202_V_section03.xml"/>  

    <model name="section00V" file="0202_V_section00.xml"/>  
  </asset>

  <worldbody>
    <!-- <light pos="0 0 10" dir="0 0 -1" directional="true" /> -->
    
    <!-- 直接加载模型，不嵌套在body中 -->
    <attach model="section01V" prefix="V1_"/>   <!-- 视觉模型前缀V_ -->
    <attach model="section01C" prefix="C1_"/>   <!-- 碰撞模型前缀C_ -->
    <attach model="section02C" prefix="C2_"/>
    <attach model="section02V" prefix="V2_"/> 
    <attach model="section03C" prefix="C3_"/>
    <attach model="section03V" prefix="V3_"/> 
    <attach model="section00V" prefix="W_"/>
    
  </worldbody>

  <sensor>
    <!-- 传感器配置 -->
    <contact name="FR_foot_contact_1" subtree1="FR_foot" subtree2="C1_ground_root" data="normal" num="1" />
    <contact name="FL_foot_contact_1" subtree1="FL_foot" subtree2="C1_ground_root" data="normal" num="1" />
    <contact name="RR_foot_contact_1" subtree1="RR_foot" subtree2="C1_ground_root" data="normal" num="1" />
    <contact name="RL_foot_contact_1" subtree1="RL_foot" subtree2="C1_ground_root" data="normal" num="1" />
    <contact name="base_contact_1" subtree1="base" subtree2="C1_ground_root" data="normal" num="1" />

    <contact name="FR_foot_contact_2" subtree1="FR_foot" subtree2="C2_ground_root" data="normal" num="1" />
    <contact name="FL_foot_contact_2" subtree1="FL_foot" subtree2="C2_ground_root" data="normal" num="1" />
    <contact name="RR_foot_contact_2" subtree1="RR_foot" subtree2="C2_ground_root" data="normal" num="1" />
    <contact name="RL_foot_contact_2" subtree1="RL_foot" subtree2="C2_ground_root" data="normal" num="1" />
    <contact name="base_contact_2" subtree1="base" subtree2="C2_ground_root" data="normal" num="1" />

    <contact name="FR_foot_contact_3" subtree1="FR_foot" subtree2="C3_ground_root" data="normal" num="1" />
    <contact name="FL_foot_contact_3" subtree1="FL_foot" subtree2="C3_ground_root" data="normal" num="1" />
    <contact name="RR_foot_contact_3" subtree1="RR_foot" subtree2="C3_ground_root" data="normal" num="1" />
    <contact name="RL_foot_contact_3" subtree1="RL_foot" subtree2="C3_ground_root" data="normal" num="1" />
    <contact name="base_contact_3" subtree1="base" subtree2="C3_ground_root" data="normal" num="1" />
  </sensor>

</mujoco>