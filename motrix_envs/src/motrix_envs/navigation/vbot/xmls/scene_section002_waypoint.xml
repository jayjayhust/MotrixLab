<?xml version="1.0" ?>
<mujoco model="vbot navigation - section002">
  <compiler angle="radian" meshdir="meshes/" autolimits="true"/>
  
  <!-- 引入vbot机器人 -->
  <include file="vbot.xml" />
  
  <statistic center="0 0 0.1" extent="12" meansize="0.04" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="120" elevation="-20" />
    <map force="0.01" />
    <scale forcewidth="0.3" contactwidth="0.5" contactheight="0.2" />
    <quality shadowsize="8192" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    
    <!-- 加载section01地形模型  -->
    <model name="section01C" file="0126_C_section01.xml"/>
    <model name="section01V" file="0202_V_section01.xml"/>
    
    <!-- 加载section02地形模型 - 使用0126版本 -->
    <model name="section02C" file="0131_C_section02_hotfix1.xml"/> 
    <model name="section02V" file="0202_V_section02.xml"/> 
    
    <!-- 加载section03地形模型 - 使用0126版本 -->
    <model name="section03C" file="0126_C_section03.xml"/> 
    <model name="section03V" file="0202_V_section03.xml"/> 

  </asset>

  <worldbody>
    <light pos="0 0 10" dir="0 0 -1" directional="true" />
    
    <!-- 加载section01地形 。直接加载模型，不嵌套在body中 -->
    <attach model="section01C" prefix="S1C_"/>
    <attach model="section01V" prefix="S1V_"/>
    
    <!-- 加载section02地形 -->
    <attach model="section02C" prefix="S2C_"/>
    <attach model="section02V" prefix="S2V_"/> 
    
    <!-- 加载section03地形 -->
    <attach model="section03C" prefix="S3C_"/>
    <attach model="section03V" prefix="S3V_"/> 
    
    <!-- 路径点定义（用于触发特殊动作） -->
    <!-- Way_Point_1: Section01区域，坐标约为 (-3.0, 0.0, 0.1) -->
    <body name="wp_1-1_body" pos="-3.0 0.0 0.1">
      <geom name="wp_1_trigger" type="sphere" size="0.3" rgba="0 1 0 0.5" contype="0" conaffinity="0" group="0"/>
    </body>

    <!-- Way_Point_1-2: Section01区域，坐标约为 (0.0, 0.0, 0.1) -->
    <body name="wp_1-2_body" pos="0.0 0.0 0.1">
      <geom name="wp_1-2_trigger" type="sphere" size="0.3" rgba="0 1 0 0.5" contype="0" conaffinity="0" group="0"/>
    </body>

    <!-- Way_Point_1-3: Section01区域，坐标约为 (3.0, 0.0, 0.1) -->
    <body name="wp_1-3_body" pos="3.0 0.0 0.1">
      <geom name="wp_1-3_trigger" type="sphere" size="0.3" rgba="0 1 0 0.5" contype="0" conaffinity="0" group="0"/>
    </body>

    <!-- Way_Point_1-4: Section01区域，坐标约为 (0.0, 8.0, 1.3) -->
    <body name="wp_1-4_body" pos="0.0 8.0 1.3">
      <geom name="wp_1-4_trigger" type="sphere" size="0.3" rgba="0 1 0 0.5" contype="0" conaffinity="0" group="0"/>
    </body>
    
    <!-- Way_Point_2: Section02区域，坐标约为 (0.0, 24.0, 1.1) -->
    <body name="wp_2-1_body" pos="0.0 24.0 1.3">
      <geom name="wp_2-1_trigger" type="sphere" size="0.3" rgba="0 1 0 0.5" contype="0" conaffinity="0" group="0"/>
    </body>
    
    <!-- Way_Point_3: Section03区域，坐标约为 (0.0, 32.5, 1.5) -->
    <body name="wp_3-1_body" pos="0.0 32.5 1.5">
      <geom name="wp_3-1_trigger" type="sphere" size="0.3" rgba="0 1 0 0.5" contype="0" conaffinity="0" group="0"/>
    </body>

  </worldbody>

  <sensor>
    <!-- 传感器配置（楼梯地形优化版） -->
    
    <!-- 足端接触传感器 - 增强版（支持更详细的接触力分析） -->
    <contact name="FR_foot_contact_force" subtree1="FR_foot" subtree2="S1C_ground_root" data="force" num="3" />
    <contact name="FL_foot_contact_force" subtree1="FL_foot" subtree2="S1C_ground_root" data="force" num="3" />
    <contact name="RR_foot_contact_force" subtree1="RR_foot" subtree2="S1C_ground_root" data="force" num="3" />
    <contact name="RL_foot_contact_force" subtree1="RL_foot" subtree2="S1C_ground_root" data="force" num="3" />
    
    <!-- 足端法向力传感器 -->
    <contact name="FR_foot_contact_normal" subtree1="FR_foot" subtree2="S1C_ground_root" data="normal" num="1" />
    <contact name="FL_foot_contact_normal" subtree1="FL_foot" subtree2="S1C_ground_root" data="normal" num="1" />
    <contact name="RR_foot_contact_normal" subtree1="RR_foot" subtree2="S1C_ground_root" data="normal" num="1" />
    <contact name="RL_foot_contact_normal" subtree1="RL_foot" subtree2="S1C_ground_root" data="normal" num="1" />
    
    <!-- 基础接触传感器 -->
    <contact name="FR_foot_contact_s2" subtree1="FR_foot" subtree2="S1C_ground_root" data="normal" num="1" />
    <contact name="FL_foot_contact_s2" subtree1="FL_foot" subtree2="S1C_ground_root" data="normal" num="1" />
    <contact name="RR_foot_contact_s2" subtree1="RR_foot" subtree2="S1C_ground_root" data="normal" num="1" />
    <contact name="RL_foot_contact_s2" subtree1="RL_foot" subtree2="S1C_ground_root" data="normal" num="1" />
    
    <!-- 基座接触传感器 -->
    <contact name="base_contact" subtree1="base" subtree2="S1C_ground_root" data="normal" num="1" />
    
    <!-- 路径点接触检测传感器 -->
    <contact name="wp_1-1_body_contact" subtree1="base" subtree2="wp_1-1_body" data="normal" num="1" />
    <contact name="wp_1-2_body_contact" subtree1="base" subtree2="wp_1-2_body" data="normal" num="1" />
    <contact name="wp_1-3_body_contact" subtree1="base" subtree2="wp_1-3_body" data="normal" num="1" />
    <contact name="wp_1-4_body_contact" subtree1="base" subtree2="wp_1-4_body" data="normal" num="1" />
    <contact name="wp_2-1_body_contact" subtree1="base" subtree2="wp_2-1_body" data="normal" num="1" />
    <contact name="wp_3-1_body_contact" subtree1="base" subtree2="wp_3-1_body" data="normal" num="1" />
    
    <!-- 楼梯边缘检测传感器（虚拟传感器，用于奖励计算） -->
    <!-- 通过计算足端位置与预定义边缘的距离来实现 -->
  </sensor>

</mujoco>
